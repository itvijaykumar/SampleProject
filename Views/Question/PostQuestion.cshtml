@model mvcForumapp.Models.Questions
@{
    ViewBag.Title = "PostQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="../../Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
@using (Html.BeginForm())
{
    <div class="post_form">
        <h2 class="maintitle">
            Posting A New Topic In GimpTalk News and Updates</h2>
        <div class="generic_bar">
        </div>
        <h3 class="bar">
            Topic Information</h3>
        <ul>
            <li class="field">
                @Html.LabelFor(m => m.TopicTitle)
                @Html.TextBoxFor(m => m.TopicTitle, new { maxlength = 50 })
                &nbsp;&nbsp;<span class="input_error">@Html.ValidationMessageFor(m => m.TopicTitle)</span>
            </li>
            <li class="field">
                @Html.LabelFor(m => m.TopicDescription)
                @Html.TextBoxFor(m => m.TopicDescription, new { maxlength = 50 })
                &nbsp;&nbsp;<span class="input_error">@Html.ValidationMessageFor(m => m.TopicDescription)</span>
            </li>
            <li class="field">
                @Html.LabelFor(m => m.TopicContent)
                @Html.TextAreaFor(m => m.TopicContent, new { maxlength = 50 })
                &nbsp;&nbsp;<span class="input_error">@Html.ValidationMessageFor(m => m.TopicContent)</span>
            </li>
        </ul>
        <br />
        <br />
        <center>
            <div style="float: left; margin-left: 250px;">
                <input type="submit" class="input_submit" value="Post New Topic" />
                @Html.ActionLink("Cancel", "Index", new { Controller = "Technology" }, new { @class = "input_submit" })
            </div>
        </center>
    </div>
}
