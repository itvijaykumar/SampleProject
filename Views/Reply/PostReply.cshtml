@model mvcForumapp.Models.Replys
@{
    ViewBag.Title = "PostReply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="../../Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="../../Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
@using (Html.BeginForm())
{
    <div class="post_form">
        <!--FORUM RULES-->
        <br />
        <!-- hidden inputs at bottom -->
        <h2 class="maintitle">
            Replying to &nbsp;
            <asp:label id="lblReplyQuestion" runat="server"></asp:label>
        </h2>
        <!--SKINNOTE: Not semantic to have an empty list here for styling purposes :P -->
        <div class="generic_bar">
        </div>
        <h3 class="bar">
            Post</h3>
        <ul>
            <li class="field">
                @Html.LabelFor(m => m.ReplyContent)
                @Html.TextAreaFor(m => m.ReplyContent, new { maxlength = 50 })
                &nbsp;&nbsp;<span class="input_error">@Html.ValidationMessageFor(m => m.ReplyContent)</span>
            </li>
        </ul>
        <br />
        <br />
        <center>
            <div style="float: left; margin-left: 250px;">
                <input type="submit" class="input_submit" value="Post New Topic" />
                @Html.ActionLink("Cancel", "Index", new { Controller = "Technology" }, new { @class = "input_submit" })
            </div>
        </center>
    </div>
}
